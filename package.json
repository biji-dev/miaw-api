{
  "name": "miaw-api",
  "version": "0.9.0",
  "description": "REST API wrapper for miaw-core - Multiple Instance of App WhatsApp",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "start": "node dist/server.js",
    "dev:start": "ts-node src/server.ts",
    "test": "vitest",
    "test:unit": "vitest --testPathIgnorePatterns=integration",
    "test:integration": "vitest -c vitest.integration.config.ts",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "whatsapp",
    "api",
    "rest",
    "miaw-core",
    "whatsapp-bot",
    "multi-instance"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/swagger": "^9.0.0",
    "@scalar/fastify-api-reference": "^1.40.9",
    "@fastify/cors": "^10.0.0",
    "@whiskeysockets/baileys": "^6.7.21",
    "fastify": "^5.2.0",
    "miaw-core": "file:../miaw-core",
    "pino": "^8.19.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^20.11.19",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.19.0",
    "vitest": "^2.1.8",
    "@vitest/ui": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
